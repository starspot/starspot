{
  "compilerOptions": {
    // Enhance strictness
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Module configuration
    "moduleResolution": "node",
    "target": "es2015",
    "module": "commonjs",
    "inlineSourceMap": true,
    "declaration": true,

    // Input/output paths
    "rootDir": "src",
    "outDir": "dist"
  },

  "include": [
    "src/**/*.ts"
  ]
}