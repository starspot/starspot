{
  "compilerOptions": {
    // Enhance Strictness
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Environment Configuration
    "lib": ["es2015", "es2016"],
    "experimentalDecorators": true,
    "moduleResolution": "node",

    // Compilation Configuration
    "target": "es6",
    "module": "commonjs",
    "inlineSourceMap": true,
    "declaration": true
  },

  "include": [
    "src/**/*.ts",
    "src/typings/**/*.d.ts",
    "test/**/*.ts"
  ]
}